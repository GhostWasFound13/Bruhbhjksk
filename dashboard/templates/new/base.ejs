<%- include("../partials/head", { arc, bot, user, path, description, title: "Aeona - Dashboard" , url, image }) %>

<article class="prose prose-2xl prose-invert  w-full py-4 px-3  rounded  border-2 border-l-0 border-gray-400 glass overflow-y-auto h-screen">
  <form role="form" action="/dashboard/<%= guild.id %>/" method="POST">
    <% if (alert) { %>
    <div id="alert-3" class="flex p-4 mb-4  rounded-lg bg-green-200" role="alert">
      <svg class="flex-shrink-0 w-5 h-5 text-green-800" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
      </svg>
      <div class="ml-3 text-sm font-medium text-green-800">
        <%= alert %>
      </div>
      <button type="button" class="ml-auto -mx-1.5 -my-1.5   rounded-lg focus:ring-2 focus:ring-green-400 p-1.5  inline-flex h-8 w-8 bg-green-200 text-green-600 hover:bg-green-300" data-dismiss-target="#alert-3" aria-label="Close">
        <span class="sr-only">Close</span>
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
    <% } %>
    <br>
    <h1>Bot Settings</h1>

    <hr class="border-gray-400">
    <div class="flex mx-auto flex-col md:flex-row">
        <div class="text-left  mr-10  p-2 w-1/2">
          <h1 class="ease-in duration-300  hover:scale-105">Say Hello To Aeona!</h1>
          <h3 class="ease-in duration-300  hover:scale-105">A multi-purpose chatbot powered by GPT-2 with moderation, AI based chat filtering, Images,
            Utilities, Reddit, Games, and much more!</h3>
        </div>
        <div class="">
          <img src="http://<%= hostname %>/logo.png" class="animate-avatar rounded-full ease-in duration-300  hover:scale-105  md:block">
        </div>
      </div>
  </form>
</article>
<%- include("../partials/footer") %>